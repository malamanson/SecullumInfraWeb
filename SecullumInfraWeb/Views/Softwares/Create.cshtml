@model SecullumInfraWeb.Models.ViewModels.SoftwareFormViewModel

@{
    ViewData["Title"] = "Cadastrar:";
}

<h2>Software</h2>

<h4>Cadastrar:</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Software.Name" class="control-label"></label>
                <input asp-for="Software.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Software.Version" class="control-label"></label>
                <input asp-for="Software.Version" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Software.Date" class="control-label"></label>
                <input asp-for="Software.Date" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Software.Serial" class="control-label"></label>
                <input asp-for="Software.Serial" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Software.Hardware" class="control-label"></label>
                <input asp-for="Software.Hardware" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Software.DepartmentId" class="control-label"></label>
                <select asp-for="Software.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Software.Status" class="control-label"></label>
                <input asp-for="Software.Status" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>


